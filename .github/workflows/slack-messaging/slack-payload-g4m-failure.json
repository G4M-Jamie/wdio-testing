{
    "blocks": [
        {
            "type": "section",
            "text": {
                "type": "plain_text",
                "text": ":gear: Whoops, something went wrong, your Gear4music test suite has failed :sob:",
                "emoji": true
            }
        },
        {
            "type": "section",
            "text": {
                "type": "plain_text",
                "text": ":large_green_circle: ${{ env.PASSED_SPEC_FILES }} tests Passed",
                "emoji": true
            }
        },
        {
            "type": "section",
            "text": {
                "type": "plain_text",
                "text": ":red_circle: ${{ env.FAILED_SPEC_FILES }} tests Failed",
                "emoji": true
            }
        },
        {
            "type": "actions",
            "elements": [
                {
                    "type": "button",
                    "text": {
                        "type": "plain_text",
                        "text": "View Gear4music Results",
                        "emoji": true
                    },
                    "url": "${{ env.URL }}"
                }
            ]
        }
    ]
}

